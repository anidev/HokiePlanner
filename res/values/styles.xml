<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme, contains styles common for all API levels -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- actionBarStyle is for compat, android:actionBarStyle for API level 11+ -->
        <item name="actionBarStyle">@style/HokieActionBarStyle</item>
    </style>

    <style name="HokieActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/hokie_primary</item>
        <item name="background">@drawable/hokie_primary</item>
    </style>

    <drawable name="hokie_primary">#660000</drawable>
    <drawable name="hokie_secondary">#FF6600</drawable>

</resources>